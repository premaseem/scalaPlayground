object Loop{
  def main(args: Array[String]){
  var a =0;
  // Nested for loop
  for ( a <- 1 until 3; b <- 7 to 10){
  println("values for a: " + a)
  println("values for b: " + b)
    }

  println("print even numbers using filters ")
  var numList = List(1,2,3,4,5,6)
  for (a <- numList if a % 2 == 0 ){
  println(a)
  }

  }
}
