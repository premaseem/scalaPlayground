object FunctionMagic{

def main(args: Array[String]) {
     delayed(time());
     println(addInt(1,3))
     printStrings("prem","meera","sony")
}

def printStrings(args :String*) = {
  for ( arg <- args){
    println(arg)
  }
}

def addInt( a:Int, b:Int ) : Int = {
   var sum:Int = 0
   sum = a + b
   return sum
}

def printMe( ) : Unit = {
   println("Hello, Scala!")
}

def time() = {
   println("Getting time in nano seconds")
   System.nanoTime
}
  def delayed( t: => Long ) = {
    println("In delayed method")
    println("Param: " + t)
   }



}
