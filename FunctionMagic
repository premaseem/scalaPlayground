object FunctionMagic{

def main(args: Array[String]) {
     delayed(time());
     println(addInt(1,3))
}

def addInt( a:Int, b:Int ) : Int = {
   var sum:Int = 0
   sum = a + b
   return sum
}

def time() = {
   println("Getting time in nano seconds")
   System.nanoTime
}
  def delayed( t: => Long ) = {
    println("In delayed method")
    println("Param: " + t)
   }



}
